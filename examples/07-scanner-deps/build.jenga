
# This example follows example2/3, but makes use of scanner deps.

# Compile C; using scanner dependencies "@"

main.o : @main.d
  gcc -c main.c -o $@

fib.o : @fib.d
  gcc -c fib.c -o $@


# Deps generation...

fib.d : fib.c
  gcc -MG -MM $< > $@

main.d : main.c
  gcc -MG -MM $< > $@


# Link...

main.exe : fib.o main.o
  gcc $^ -o $@
