
# Fibonacci example based on Samir's blog post:
# https://functional.computer/blog/build-systems-are-spreadsheets
# Try: jenga cat fib-40.txt

numbers:
  seq 2 100 > $out

fib-0.txt:
  echo 0 > $out

fib-1.txt:
  echo 1 > $out

FIB: numbers
  cat $in | while read n; do echo fib-$$n.txt: fib-$$(expr $$n - 1).txt plus fib-$$(expr $$n - 2).txt : echo '$$$$(cat $$ins) | bc >> $$out' ; done > $out

include FIB

plus:
  echo + > $out
